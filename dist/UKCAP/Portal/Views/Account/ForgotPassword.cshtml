@model CitizenPortal.Models.FogotModel

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@*<h2>ForgotPassword</h2>*@
<html>
<head>
</head>
<body>
    <div>
        @using (Html.BeginForm("ForgotPassword", "Account"))
        {
            @Html.ValidationSummary(true)
            <div class="container">
                <div class="col-lg-12">

                    <div class="forgot-wrapper box-container">
                        <div class="forgot_hd">Forgot Password</div>
                        <div class="box-body box-body-open" style="margin-top:20px;">
                            <div class="form-group" style="margin-bottom: 0 !important;">
                                <div class="col-md-4 ptop10">Registered Email ID</div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @placeholder = "Type your registered email id", @autofocus = "", @maxlength = "100" , required = "required" })
                                    @*<input id="RegEmailid" class="form-control" placeholder="Type your registered email id" name="RegEmailid" type="text" autofocus="" maxlength="100" />*@
                                </div>
                                <div class="col-md-4 ptop10">Profile ID</div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.ProfileID, new { @class = "form-control",@placeholder = "Type your registered Profile id", @autofocus = "", @maxlength = "100", @data_val = "true", @data_val_required = "Profile ID is required", required = "required" })
                                    @Html.ValidationMessageFor(m=>m.ProfileID)
                                     @*<input id="NewPwd" class="form-control" placeholder="Type your new password" name="NewPwd" type="text" autofocus="" maxlength="100" />*@
                                </div>
                                <div class="col-md-4 ptop10">Generate OTP</div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.OTP, new { @class = "form-control", @placeholder = "Type Your OTP From Registered Mobile Number ", @autofocus = "", @maxlength = "100" })
                                    @*<input id="OTP" class="form-control" placeholder="" name="otpCode" type="text" autofocus="" />*@
                                </div>
                                <div class="col-md-2 pleft0">
                                    <input type="submit" name="Command" value="Generate OTP" id="GenerateOTP" class="btn-btn-default btn-success" />
                                    @*<button type="button" class="btn btn-default">Generate OTP</button>*@
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-md-4 ptop5">Captcha <img src="~/Account/ShowCaptchaImage" class="pleft15" /></div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.CaptchaText, new { @class = "form-control", @placeholder = "Enter the Capacha From Image", @name = "Captcha", @autofocus = "" })
                                  
                                </div>
                               

                                <div class="col-md-4">

                                </div>
                                <div class="col-md-8"><input type="submit" name="Command" value="Send Mail" id="sendMail" class="btn btn-primary" />
                                    <span class="text-align-center pleft10">
                                        @if (ViewBag.Message != "")
                                        {
                                            <strong>@Html.Raw(ViewBag.Message)</strong>
                                        }

                                        @if (ViewBag.SomeMessage != "")
                                        {
                                            <strong> @Html.Raw(ViewBag.SomeMessage)</strong>


                                        }


                                        else if (ViewBag.Verify != "")
                                        {

                                            <strong> @Html.Raw(ViewBag.Verify)</strong>
                                        }
                                        else if (ViewBag.Verify != "")
                                        {

                                            <strong> @Html.Raw(ViewBag.Verify)</strong>
                                        }
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
          
</html>

}
<style>
    .forgot-wrapper {
        background-color: #F0F8FF;
        width: 60%;
        height: 300px;
        border: 1px solid #1D88E8;
        padding-top: 20px;
        margin: 50px auto;
    }

    .forgot_hd {
        position: absolute;
        background-color: #1D88E8;
        color: #fff;
        font-size: 25px;
        padding: 10px;
        z-index: 1000;
        top: 24px;
        margin-left: 200px;
    }

    .box-body .form-control {
        background: none repeat scroll 0 0 #fff;
        border: 1px solid #cdcdcd !important;
        border-radius: 0;
        box-shadow: 0 0 0;
        color: #333;
        padding: 3px 5px !important;
        margin: 0 0 18px 0;
    }

   #GenerateOTP{ padding: 7px;
    border-radius: 3px;
    border: 1px solid #4cae4c;}
</style>